{
    "name": "ProxyXPS",
    "gpu_list": [0,1,2,3],

    "arch": {
        "type": "TandemTPS",
        "args": {}
    },
    "data_loader": {
        "type": "IMNETDataLoader",
        "args":{
            "data_dir": "./../data/",
            "batch_size": 256,
            "num_workers": 8,
            "pin_memory": true,
            "persistent_workers": true,
            "repeated_aug": false,
            "transform_config": {
                "input_size": 224,
                "color_jitter": 0.4,
                "aa": "rand-m9-mstd0.5-inc1",
                "train_interpolation": "bicubic",
                "reprob": 0.25,
                "remode": "pixel",
                "recount": 1
            }
        }
    },
    "mixup": {
        "mixup_alpha": 0.8,
        "cutmix_alpha": 1,
        "cutmix_minmax": null,
        "prob": 1.0,
        "switch_prob": 0.5,
        "mode": "batch",
        "label_smoothing": 0.05,
        "num_classes": 1000
    },
    "optimizer": {
        "type": "AdamW",
        "args":{
            "lr": 1e-3,
            "betas": [0.9,0.999],
            "weight_decay": 0.15
        }
    },
    "loss": {
        "type": "Proxyloss",
        "args": {
            "distillation_type": "soft_kl",
            "distillation_from": "teacher",
            "distillation_alpha": 0.9,
            "distillation_tau": 1.5,
            "hidden_state_criterion": "mse",
            "hidden_state_beta": 0.1
        }
    },
    "metrics": [
        "accuracy", "top_k_acc"
    ],
    "lr_scheduler": {
        "sched": "cosine",
        "cooldown_epochs": 10,
        "min_lr": 1e-6,
        "warmup_lr": 1e-6,
        "warmup_epochs": 5
    },
    "trainer": {
        "epochs": 100,
        "val_freq": 1,

        "save_dir": "./../saved/",
        "save_period": 10,
        "verbosity": 2,
        
        "monitor": "min val_loss",
        "early_stop": 5,

        "tensorboard": true
    }
}
